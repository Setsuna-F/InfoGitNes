<?xml version="1.0"?>
<modele>
	<description>Classifying tweets (short text documents) according to their degree of subjectivity: 
	information (objective), opinion (intellective subjective), sentiment (affective-intellective subjective) and emotion (affective subjective). 
	The model has been learned on tweets about climate change released during DEFT 2015.
	</description>
	<url>https://deft.limsi.fr/2015/</url>
	<root>
		<sample>1000</sample>
		<microfmeasure>71.1%</microfmeasure>
		<macrofmeasure>69.9%</macrofmeasure>
		<microprecision>72.8%</microprecision>
		<macroprecision>73.7%</macroprecision>
		<microrecall>71.9%</microrecall>
		<macrorecall>68.5%</macrorecall>
	</root>
	<classe id="information" >
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>100%</recall>
	</classe>
	<classe id="emotion">
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>85%</recall>
	</classe>
	<classe id="sentiment">
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>71.9%</recall>
	</classe>
	<classe id="opinion">
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>71.9%</recall>
	</classe>
</modele>