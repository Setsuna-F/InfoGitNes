<?xml version="1.0"?>
<modele>
	<description>Classifying tweets (short text documents) according to their polarity: positive, negative and neutral. 
		The model has been learned on tweets about climate change released during DEFT 2015.
	</description>
	<url>https://deft.limsi.fr/2015/</url>
	<root>
		<sample>1000</sample>
		<microfmeasure>71.1%</microfmeasure>
		<macrofmeasure>69.9%</macrofmeasure>
		<microprecision>72.8%</microprecision>
		<macroprecision>73.7%</macroprecision>
		<microrecall>71.9%</microrecall>
		<macrorecall>68.5%</macrorecall>
	</root>
	<classe id="positive" >
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>100%</recall>
	</classe>
	<classe id="neutre">
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>85%</recall>
	</classe>
	<classe id="negative">
		<sample>1000</sample>
		<fmeasure>71.1%</fmeasure>
		<precision>72.8%</precision>
		<recall>71.9%</recall>
	</classe>
</modele>